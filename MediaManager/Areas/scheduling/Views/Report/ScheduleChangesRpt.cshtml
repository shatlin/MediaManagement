@model MediaManager.Areas.scheduling.Models.ScheduleChangesRptModel
@using MediaManager.Infrastructure.Helpers;
@{
    ViewBag.Title = "Schedule Changes Report";
    Layout = SharedPages.LayoutPage;  
}
@*<h2>Schedule Changes Report</h2>*@


    <script src="~/Content/Scripts/Scheduling/Report/SchedulingChangesReport.js"
    type="text/javascript"></script>
    <div class="mainHeading" style=" padding-left:10px;">
    Schedule Changes Report</div>
    <div></div>
    <div class="ReportsubHeading" style="width:54%">Report Parameters</div>
@*<div class="ReportMainHeading" style="width:54%">Report Parameters</div>*@

<div class="ReportPlaceHolder" id="ReportInput"  style="width:54%;display:none">




    <table width="100%" border="1">
        
        <tr align="center">
            <td class="pagecontent">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "mainForm" }))
                {
                                
                    <fieldset>
                        <table class="tableLayout">
                            <tr>
                                 <td width="2%">
                                </td>
                                <td width="28%">@Html.Label("Channel", new { @class = "label", @style = "text-align:left;" })
                                </td>
                                    <td width="2%">
                                </td>
                               
                                <td width="10%">
                                    <select id="Channel" name="Channel" style="width:190px;">
                                        @if (Model != null)
                                        {
                                            if (Model.ChannelList != null)
                                            {
                                            @*<option value="%">% &nbsp; &nbsp; &nbsp; &nbsp; All</option>*@
                                                foreach (MediaManager.LookupsServices.ChannelLookupItem Channel in Model.ChannelList)
                                                {
                                                    int noOfSpace = 8 - Channel.ChannelShortName.Length;
                                                     <option value="@Channel.ChannelShortName" id="@Channel.ChannelShortName">@Channel.ChannelShortName 
                                                        @for (int index = 0; index < noOfSpace;index++)
                                                        {
                                                             <text> &nbsp;</text>
                                                        }
                                                    @Channel.ChannelName</option>
                                                }
                                            }
                                        }
                                    </select>
                                    </td>
                                      <td width="2%">
                                </td>
                                    <td width="60%">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                </td>
                                
                                <td>@Html.Label("Schedule Entries From", new { @class = "label", @style = "text-align:left;" })
                                </td>
                                   <td class="RequiredIndicator">*
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.ScheduleEntriesFrom, new { @class = "inputTextcolReport", @placeholder = "select a date" })
                                </td>
                               <td>
                                <img src="../../Content/images/date.png" id="ScheduleEntriesFromIcon" alt="" class="VerticalAlignMiddle" />
                             </td>
                                <td>
                                </td>
                                 <td>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                </td>
                                <td>@Html.Label("Schedule Entries To", new { @class = "label", @style = "text-align:left;" })
                                </td>
                                   <td class="RequiredIndicator">*
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.ScheduleEntriesTo, new { @class = "inputTextcolReport", @placeholder = "select a date" })
                                </td>
                                <td>
                                <img src="../../Content/images/date.png" id="ScheduleEntriesToIcon" alt="" class="VerticalAlignMiddle" />
                             </td>
                                <td>
                                </td>
                                 <td>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                </td>
                                <td>@Html.Label("Changes Made From", new { @class = "label", @style = "text-align:left;" })
                                </td>
                                <td class="RequiredIndicator">*
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.ChangesMadeFrom, new { @class = "inputTextcolReport", @placeholder = "select a date" })
                                </td>
                                <td>
                                <img src="../../Content/images/date.png" id="ChangesMadeFromIcon" alt="" class="VerticalAlignMiddle" />
                             </td>
                                <td>
                                </td>
                                 <td>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                </td>
                                <td>@Html.Label("Changes Made To", new { @class = "label", @style = "text-align:left;" })
                                </td>
                                <td class="RequiredIndicator">*
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.ChangesMadeTo, new { @class = "inputTextcolReport", @placeholder = "select a date" })
                                </td>
                                <td>
                                <img src="../../Content/images/date.png" id="ChangesMadeToIcon" alt="" class="VerticalAlignMiddle" />
                             </td>
                                <td>
                                </td>
                                 <td>
                                </td>
                            </tr>
                            <tr>
                               
                                <td>
                                </td>
                                <td>
                                    
                                </td>
                               
                                <td align="right" colspan="5">
                                <input type="submit" id="btnExportToExcel" name="btnExportToExcel" class="inputButton" value="Export To Excel" />
                                     <input type="submit" name="btnGenerate" class="inputButton" id="btnGenerate" value="Generate" />
                                      <input type="button" id="btnReset" class="inputButton" value="Reset" />
                                </td>
                                
                               
                                   
                               
                            </tr>
                        </table>
                    </fieldset>
                               
    
                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
                }
            </td>
        </tr>
    </table>
</div>
