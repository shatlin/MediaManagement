<script type="text/javascript">



    



    $(function () {


        var grid;
        var selectedvalue;
        var gridwidth = $("#AmortizationMethodGrid").width();
        $('#AmortizationMethodGrid').css({ "width": gridwidth + "px", "height": "400px" });


    var columns = [
    { id: "FsrValue1", name: "FsrValue1", field: "FsrValue1" },
    { id: "FsrDesc1", name: "FsrDesc1", field: "FsrDesc1" },
    { id: "FsrValue2", name: "FsrValue2", field: "FsrValue2" },
    { id: "FsrDesc2", name: "FsrDesc2", field: "FsrDesc2" },
    { id: "FsrValue3", name: "FsrValue3", field: "FsrValue3" },
    { id: "FsrDesc3", name: "FsrDesc3", field: "FsrDesc3" },
    { id: "FsrValue4", name: "FsrValue4", field: "FsrValue4" },
    { id: "FsrDesc4", name: "FsrDesc4", field: "FsrDesc4" }

  ];

        var options = {
            enableCellNavigation: true,
            enableColumnReorder: false,
            forceFitColumns: true

        };


        var myData = [];


        $.ajax({
            url: '@Url.Action("GetAmortMethodLOVList", "DealMemoMaintenance", new { area = "Acquisition" })',
            type: "GET",
            dataType: 'Json',

            success: function (data) {
                myData = data;

                debugger;
                grid = new Slick.Grid("#AmortizationMethodGrid", myData, columns, options);


                grid.onClick.subscribe(function (e, args) {
                    var cell = grid.getCellFromEvent(e);
                    var row = cell.row;
                    selectedvalue = data[cell.row].FsrValue1;
                  

                });



            },
            error: function () {
                alert("error");
            }
        });  //end of jax call


    });

  

</script>
