@model MediaManager.Areas.Acquisition.ViewModels.DealMemoUserMaintenanceViewModel

@{
    ViewBag.Title = "Deal Memo User Maintenance";
    Layout = MediaManager.Infrastructure.Helpers.SharedPages.LayoutPage;
}

<h2>

</h2>

<style>
    .cell-text-align
    {
    	text-align:center
    }        
</style>
 


<form action="#" method="post">
    <table cellpadding="0" cellspacing="0" width="98%" class="Layout">
        <tr>
            <td>
                <div class="mainHeading">
                    Deal Memo User Maintenance
                </div>
                <div id="SearchInputDiv" class="PlaceHolder">
                    <table class="tableLayout" cellpadding="0" cellspacing="0">
                        <tr>
                            <td colspan="4">
                                <div class="subHeading">
                                    Search Criteria
                                </div>
                            </td>
                        </tr>
                        
                        <tr>
                            <td width="12%">
                                  <label class="label"> Media Username</label>
                            </td>
                            <td width="15%">
                                @Html.TextBoxFor(Model=>Model.mindpackUsername, new { @class = "inputTextSamll" })
                                <img id="AmortMethodLookupIcon1" src="~/Content/images/lov_down_arrow.png" alt=""
                                class="VerticalAlignMiddle" />
                            </td>
                            <td width="15%">
                                <label class="label">Representing Company</label>
                            </td>
                            <td width="15%">
                                @Html.TextBoxFor(Model => Model.repCompanyname, new { @class = "inputTextSamll" })
                                <img id="AmortMethodLookupIcon2" src="~/Content/images/lov_down_arrow.png" alt=""
                                class="VerticalAlignMiddle" />
                            </td>
                            <td width="12%">
                                <label class="label">Representing Licensee</label>
                            </td>
                            <td width="15%">
                                @Html.TextBoxFor(Model => Model.repLicense, new { @class = "inputTextSamll" })
                                <img id="AmortMethodLookupIcon3" src="~/Content/images/lov_down_arrow.png" alt=""
                                class="VerticalAlignMiddle" />
                            </td>
                            <td width="7%">
                                <input type="button" class="inputButton" value="Search" id="Search" onclick="Search_DealMemo()"/>
                            </td>
                            <td width="7%">
                                <input type="button" class="inputButton" value="Reset" onclick="reset_click()"/>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                            &nbsp;
                            </td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
    </table>
    <table class="Layout" id="tblSearchResult" cellpadding="0" cellspacing="0" width="98%">
        <tr>
            <td class="pagecontent">
                <div class="PlaceHolder" id="GridDiv">
                    <table cellpadding="6" cellspacing="6" width="100%">
                        <tr>
                            <td style="width:85%">
                            </td>
                            <td style="width:14%">
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="subHeading">
                                    Royalty Condition
                                </div>
                           </td>
                        </tr>        
                        <tr>
                            <td colspan="2">
                                <div id="teamGrid">
                                </div>
                                <div id="footer" class="grid-header" style="height:25px; visibility:hidden">
                                    <label id="TotalRecords">
                                    </label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" align="right">
                                <input type="button" class="inputButton" value="Save" onclick="find_click()"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
    </table>
</form>
<div id="UserNamLOV" title="User Details"></div>
<div id="LicenseeLOV" title="Licensee Details"></div>
<div id="CompanyLOV" title="Company Details"></div>

<script src="~/Content/SlickGrid-master/slick.formatters.js" type="text/javascript"></script>
<script src="~/Content/Scripts/Acquisition/DealMemoMaintenance/DealMemoUserMaintenance.js" type="text/javascript"></script>

<script type="text/javascript">
    var ActiveUserDetailsUrl = '@Url.Action("GetActiveUserDetails", "DealMemoUserMaintenance", new { area = "Acquisition" })';
    var CompanyNameDetailsUrl = '@Url.Action("GetCompanyDetails", "DealMemoUserMaintenance", new { area = "Acquisition" })';
    var LicenseeDetailsUrl = '@Url.Action("GetLicenseeDetails", "DealMemoUserMaintenance", new { area = "Acquisition" })';
    var SearchAllDetails = '@Url.Action("GetDealMemoUserDetails", "DealMemoUserMaintenance", new { area = "Acquisition" })';
    var SaveAllDetails = '@Url.Action("Save", "DealMemoUserMaintenance", new { area = "Acquisition" })';
</script>

