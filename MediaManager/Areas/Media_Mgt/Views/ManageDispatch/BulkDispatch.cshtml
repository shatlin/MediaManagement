@model MediaManager.Areas.Media_Mgt.ViewModels.ManageDispatchViewModel
@{
    ViewBag.Title = "BulkDispatch";
    Layout = "~/Areas/Home/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/Scripts/slick.cellrangedecorator.js" type="text/javascript"></script>
<script src="~/Content/Scripts/slick.cellrangeselector.js" type="text/javascript"></script>
<script src="~/Content/Scripts/slick.cellselectionmodel.js" type="text/javascript"></script>
<script src="~/Content/Scripts/slick.formatters.js" type="text/javascript"></script>
<script src="~/Content/Scripts/slick.editors.js" type="text/javascript"></script>
<script src="~/Content/Scripts/slick.dataview.js" type="text/javascript"></script>
<script src="~/Content/Scripts/slick.grid.js" type="text/javascript"></script>
<script src="~/Content/Scripts/slick.rowmovemanager.js" type="text/javascript"></script>
<script src="~/Content/Scripts/firebugx.js" type="text/javascript"></script>
<link href="~/Content/jquery-ui.css" rel="stylesheet" type="text/css" />
<link href="~/Content/slick.grid.css" rel="stylesheet" type="text/css" />
<link href="~/Content/jquery-ui-1.8.16.custom.css" rel="stylesheet" type="text/css" />
<link href="~/Content/examples.css" rel="stylesheet" type="text/css" />
<link href="~/Content/slick.pager.css" rel="stylesheet" type="text/css" />
<link href="~/Content/slick-default-theme.css" rel="stylesheet" type="text/css" />
<link href="~/Content/slick.grid.css" rel="stylesheet" type="text/css" />
<script src="~/Content/Scripts/Media_Mgt/ManageDispatch/BulkDispatch.js" type="text/javascript"></script>
<script type="text/javascript">
    var actionUrl = '@Url.Action("SearchBulkDispatchTapeDetail", "ManageDispatch", new { area = "Media_Mgt" })';    
</script>
<form action="#" method="post">
<div class="mainHeading">
    Bulk Dispatch
</div>
<table class="Layout" cellpadding="0" cellspacing="0">
    <tr>
        <td>
            <div class="PlaceHolder">
                <table class="tableLayout">
                    <tr>
                        <td colspan="2">
                            <b>Search Tap</b>
                        </td>
                    </tr>
                    <tr>
                        <td width="10%">
                            Tape Title
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.TapeTitle, new { @class = "inputTextSamll" })
                        </td>
                    </tr>
                    <tr>
                        <td width="10%">
                            Tape No.
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.TapeNo, new { @class = "inputTextSamll" })
                        </td>
                    </tr>
                    <tr>
                        <td width="10%">
                            Programme Title
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.ProgramTitle, new { @class = "inputTextSamll" })
                        </td>
                    </tr>
                    <tr>
                        <td width="10%">
                            Media Type
                        </td>
                        <td>
                            @Html.DropDownListFor(m => m.MediaType, Model.MediaType, new { @class = "inputTextSamll" })
                        </td>
                    </tr>
                </table>
            </div>
        </td>
    </tr>
</table>
<table class="Layout" cellpadding="0" cellspacing="0">
    <tr>
        <td colspan="3">
            <b style="margin-left: 35px;">Search Result</b>
        </td>
    </tr>
    <tr>
        <td colspan="3">
            <div class="PlaceHolder" id="GridDiv">
                <table class="tableLayout">
                    <tr>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div id="gridTapeSearch" style="height: 150px;">
                            </div>
                            <div id="footerTapeSearch" class="grid-header" style="height: 25px; visibility: hidden">
                                <label id="TotalRecordsTapeSearch">
                                </label>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </td>
    </tr>
    <tr>
        <td colspan="3">
            <b style="margin-left: 35px;">Tape Added</b>
        </td>
    </tr>
    <tr>
        <td colspan="3">
            <div class="PlaceHolder">
                <table class="tableLayout">
                    <tr>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div id="gridTapeAdded" style="height: 150px;">
                            </div>
                            <div id="footerTapeAdded" class="grid-header" style="height: 25px; visibility: hidden">
                                <label id="TotalRecordsTapeAdded">
                                </label>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <table style="margin-left: 35px;" class="tableLayout">
                <tr>
                    <td width="10%">
                        Status
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.DispatchStatus, Model.DispatchStatus, new { @class = "inputTextSamll" })
                    </td>
                </tr>
                <tr>
                    <td width="10%">
                        Dispatch Details
                    </td>
                    <td>
                        @Html.TextAreaFor(m => m.DispatchDetails, new { @class = "inputTextArea" })
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <input style="margin-left: 35px;" type="button" id="btnDispatch" class="inputButton"
                            value="Dispatch" />
                        <input style="margin-left: 15px;" type="button" id="btnReset" class="inputButton"
                            value="Reset" />
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
</form>
