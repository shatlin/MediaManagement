<link href="~/Content/slick-default-theme.css" rel="stylesheet" type="text/css" />
<link href="~/Content/slick.grid.css" rel="stylesheet" type="text/css" />
<form action="#" method="post">
<div class="mainHeading">
    Media Maintenance
</div>
<table class="Layout" cellpadding="0" cellspacing="0">
    <tr>
        <td>
            <div class="PlaceHolder">
                <table class="tableLayout">
                    <tr>
                        <td colspan="2">
                            <b>Search Tap</b>
                        </td>
                    </tr>
                    <tr>
                        <td width="10%">
                            Media Title
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.TapeTitle, new { @class = "inputTextSamll" })
                        </td>
                    </tr>
                    <tr>
                        <td width="10%">
                            Tape No.
                        </td>
                        <td >
                            @Html.TextBoxFor(m => m.TapeNo, new { @class = "inputTextSamll" })
                        </td>
                    </tr>
                    <tr>
                        <td width="10%">
                            Programme Title
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.ProgrammeSearchTitle, new { @class = "inputTextSamll" })
                        </td>
                    </tr>
                    <tr>
                        <td width="10%">
                            Media Type
                        </td>
                        <td>
                        @Html.DropDownListFor(m => m.MediaType, Model.MediaType, new { @class = "inputTextSamll" })
                           @* <select class="inputTextSamll" id="ddlTapeType">
                                @if (Model != null)
                                {
                                    if (Model.TapeTypeList != null)
                                    {
                                    <option value="Select">--Select Option--</option>
                                        foreach (var val in Model.TapeTypeList)
                                        {
                                    <option value="@val.TapeFormat">@val.TapeFormat&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@val.Description</option>
                                        }
                                    }
                                }
                            </select>*@
                        </td>
                    </tr>
                    <tr>                        
                        <td align="right" colspan="2">
                        <input type="button" id="btnTapeSearch" class="inputButton" value="Search" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <input type="button" id="btnReset" class="inputButton" value="Reset" />
                        </td>
                    </tr>
                </table>
            </div>
        </td>
    </tr>
</table>
<div class="mainHeading">
    Search Result
</div>
<table class="Layout" cellpadding="0" cellspacing="0">
    <tr>
        <td>
            <div class="PlaceHolder" id="GridDiv">
                <table class="tableLayout">
                    <tr>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div id="gridTapeSearch" class="GridContainer" style="height: 300px;">
                            </div>
                            <div id="footer"  style="height: 25px; visibility: hidden">
                                <label id="TotalRecords">
                                </label>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </td>
    </tr>
    <tr>
        <td >
            <input type="button" style="margin-left:35px;"  id="btnViewDetail" class="inputButton" value="View Detail" />           
        </td>
    </tr>
</table>
</form>

<script type="text/javascript">
    var actionUrl = '@Url.Action("SearchTapeDetail", "TapeMaintenance", new { area = "Media_Mgt" })';
</script>
<script src="~/Content/Scripts/Media_Mgt/TapMaintenance/TapeMaintenance.js"
    type="text/javascript"></script>

