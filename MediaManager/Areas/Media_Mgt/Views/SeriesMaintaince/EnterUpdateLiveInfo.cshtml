@model MediaManager.Areas.Media_Mgt.ViewModels.SeriesSearchViewModel
<form method="post">
<table class="Layout" cellpadding="0" cellspacing="0">
    <tr>
        <td>
            @*<div class="mainHeading">
                Enter/Update Live info
            </div>*@
            <div>
                <table class="tableLayout">
                    <tr>
                        <td colspan="7">
                            <div class="subHeading">
                                Enter/Update Live info
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td width="35%" style="padding-left:5px;">
                            @Html.LabelFor(m => m.enterUpdateLiveInfo.SrcEpisodeFrom, new { @class = "label" })
                        </td>
                        <td class="RequiredIndicator" width="2%">
                            *
                        </td>
                        <td width="10%">
                            @Html.TextBoxFor(m => m.enterUpdateLiveInfo.SrcEpisodeFrom, new { @class = "inputTextLarge", @id = "txtSrcEpisodeFrom" })
                        </td>
                        <td width="25%" align="center">
                            @Html.LabelFor(m => m.enterUpdateLiveInfo.SrcEpisodeTo, new { @class = "label" })
                        </td>
                        <td class="RequiredIndicator" width="2%">
                            *
                        </td>
                        <td width="10%">
                            @Html.TextBoxFor(m => m.enterUpdateLiveInfo.SrcEpisodeTo, new { @class = "inputTextLarge", @id = "txtSrcEpisodeTo" })
                        </td>
                        <td width="16%">
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-left:5px;">
                            @Html.LabelFor(m => m.enterUpdateLiveInfo.DefaultDate, new { @class = "label" })
                        </td>
                        <td class="RequiredIndicator" width="5%">
                            *
                        </td>
                        <td valign="middle">
                            @Html.TextBoxFor(m => m.enterUpdateLiveInfo.DefaultDate, new { @class = "inputTextLarge", @id = "txtDefaultDate" })
                        </td>
                        <td>
                            <img src="../../Content/images/date.png" id="ForDateIcon" alt="" class="VerticalAlignMiddle" />
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-left:5px;">
                            @Html.LabelFor(m => m.enterUpdateLiveInfo.DaysBetween, new { @class = "label" })
                        </td>
                        <td class="RequiredIndicator" width="5%">
                            *
                        </td>
                        <td valign="middle">
                            @Html.TextBoxFor(m => m.enterUpdateLiveInfo.DaysBetween, new { @class = "inputTextLarge", @id = "txtDaysBetween" })
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                        <td valign="middle">
                        </td>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-left:5px;">
                            @Html.LabelFor(m => m.enterUpdateLiveInfo.DefaultTime, new { @class = "label" })
                        </td>
                        <td class="RequiredIndicator" width="5%">
                            *
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.enterUpdateLiveInfo.DefaultTime, new { @class = "inputTextSingleChar", @id = "txtDefaultTime" })
                            :
                            @Html.TextBoxFor(m => m.enterUpdateLiveInfo.DefaultTimeMinutes, new { @class = "inputTextSingleChar", @id = "txtDefaultTimeMinutes" })
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        
                        <td colspan="6" align="right">
                            <input type="button" value="Save" class="inputButton" onclick="enterupdateliveinfo_save_click()" />
                          
                            <input type="button" value="Cancel" class="inputButton" onclick="popup_cancel_click()" />
                        </td>
                        
                    </tr>
                </table>
            </div>
        </td>
    </tr>
</table>
</form>
@*<h1>Enter/Update Live info</h1>*@
<script type="text/javascript">
    $("#txtDefaultDate").datepicker({ dateFormat: "dd-M-yy",
        changeMonth: true,
        changeYear: true
    }).datepicker("setDate", new Date());

    $("#ForDateIcon").click(function () {
        $("#txtDefaultDate").datepicker("show");
    });
</script>
